---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentation";
const pathname = removeTrailingSlash(Astro.url.pathname);
---

<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between">
  <a
          href="/"
          class:list={{
            ["hover:text-blue-500"]: true,
            ["text-blue-500"]: pathname === "/",
          }}>{presentation.title}</a
        >
        
    

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a
          href="/"
          class:list={{
            ["hover:text-blue-500"]: true,
            ["text-blue-500"]: pathname === "/",
          }}>Home</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href={presentation.socials[0].link}
          class="hover:text-blue-500">{presentation.socials[0].label}</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href="/posts"
          class:list={{
            ["hover:text-blue-500"]: true,
            ["text-blue-500"]: pathname === "/posts",
          }}>Ideas</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href="/about"
          class:list={{
            ["hover:text-blue-500"]: true,
            ["text-blue-500"]: pathname === "/posts",
          }}>About</a
        >
      </li>
     
    </ul>
  </nav>
</header>
